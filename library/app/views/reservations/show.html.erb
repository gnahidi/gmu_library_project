<h1>Overdue Listing</h1>
<p>The following books are reserved:</p>
<% @reservations.each do |reservation| %>

  <%= image_tag(reservation.book.image_cover_url, size: "250x300") %>
  <%= link_to(reservation.book.title, reservation.book) %>
      
  <p>
  Reserved By: <%= reservation.user.name %> <br>
  Reserved On: <%= reservation.reserved_on.strftime('%B %d, %Y') if reservation.reserved_on %> <br>
  Due On: <%= reservation.due_on.strftime('%B %d, %Y') if reservation.due_on %>
  </p>
  
<% end %>
