<h1>Reservations#show</h1>
<p>Find me in app/views/reservations/show.html.erb</p>
<% content_for :title, @reservation.book.title %>
<article class="reservation">
  <header>
    <h2><%= @reservation.book.book_id %></h2>
  </header>
  <%= image_tag @reservation.book.image_cover_url %>  
  <p><label>Author:</label> <%= @reservation.book.author.name %></p>
  <p><label>Reserved On:</label> <%= @reservation.reserved_on %></p>
  <p><label>Due on:</label> <%= @reservation.due_on %></p>
  </article>
<%= button_to 'Return Book', @reservation,

               method: :delete,

               data: { confirm: 'Do you want to return?' } %>

