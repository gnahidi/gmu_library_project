<% content_for :title, @book.title %>
<article class="book">
  <header>
    <h2><%= @book.title %></h2>
  </header>
  <%= image_tag @book.image_cover_url %>  
  <p><label>Abstract:</label> <%= @book.abstract %></p>
  <p><label>Pages:</label> <%= number_with_delimiter(@book.pages) %></p>
  <p><label>Genre:</label> <%= @book.genre %></p>
  <p><label>Published On:</label><%= @book.published_on %>
  <p><label>Author:</label><%= link_to @book.author.name, @book.author %> <br />
  	<p><label>Available to Reserve:</label><%= @book.total_in_library %> <br />
</article>
<% if @book.total_in_library.nil? %>

<%= link_to 'Reserve', reservations_path+"?book_id=#{@book.id}" , method: :post %>
| <% end %>
<%= link_to 'All Books', books_path %>
|
<%= link_to "All Authors", authors_path %><br>
<% if session[:admin] %>
| <%= link_to 'Edit', edit_book_path(@book) %>
<%= button_to 'Delete ', @book, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>

